# next_item_of

$empty_node/next_item_of: (_self _key) -> undefined

$binary_node/next_item_of: (self key)
  # return the smallest node with a key greater than the specified one
  self $my_key $my_left $my_right
  if
    key == my_key
    -> first_item_of(my_right)
    :
      if
        key < my_key:
          $next_key next_item_of(my_left key)
          if
            next_key.is_defined
            -> next_key
            -> my_key
        -> next_item_of(my_right key)

